// Main program
int main ()
{
    // TODO: Add your program code here
	cout << "Day3_Operations started." << endl << endl;
	//postfix and prefix
	int a {10};
	cout << "a :"  << a <<" "<< ++a <<" " << a++ << endl;
	cout << "a: " << a << " "<< --a <<" "<< a << endl;

	bool x {true};
	std::cout << std::boolalpha;
	cout << x << endl;
	cout << !x << endl;


	double num1 = 3.14159;
	double num2 = 42.42;

	std::cout << std::setw(10) << num1 << std::endl;
	std::cout << std::setw(10) << num2 << std::endl;

	return 0;
}
